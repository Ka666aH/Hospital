<Page x:Class="Информационная_система_для_больницы.Pages.General.InfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Информационная_система_для_больницы.Pages.General"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Background="Transparent"
      Title="InfoPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Viewbox HorizontalAlignment="Center">
            <Label Content="Справка" FontSize="15" FontFamily="Bahnschrift"  Foreground="{DynamicResource textColor}"/>
        </Viewbox>
        
        <Viewbox Grid.Row="1" Margin="10 0 25 10" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <TextBlock x:Name="info" FontFamily="Bahnschrift"  Foreground="{DynamicResource textColor}" TextWrapping="Wrap"/>
        </Viewbox>

        <Viewbox Grid.Row="2" Margin="10 25 10 10" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <TextBlock x:Name="credits" FontFamily="Bahnschrift"  Foreground="{DynamicResource textColor}"/>
        </Viewbox>
    </Grid>
</Page>
